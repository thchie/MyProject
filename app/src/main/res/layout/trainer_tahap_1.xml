<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/colorTeacherBg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/teacher_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/teacher_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/teacher"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/teacher_et"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/white"
                android:enabled="false" />

            <ImageView
                android:id="@+id/teacher_clear_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/trainer_clear" />

            <ImageView
                android:id="@+id/teacher_speak_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trainer_play" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewTeacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:background="@color/colorStudentBg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/student_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/student_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:text="@string/student"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/student_et"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/white"
                android:enabled="false" />

            <ImageView
                android:id="@+id/student_clear_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/trainer_clear" />

            <ImageView
                android:id="@+id/student_speak_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trainer_play" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewStudent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

    </LinearLayout>


</LinearLayout>
